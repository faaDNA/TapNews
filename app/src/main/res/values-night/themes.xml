<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TapNews" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="toolbarStyle">@style/CustomToolbarDark</item>

        <!-- Bottom Navigation Colors -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>

        <!-- Default button styles -->
        <item name="materialButtonStyle">@style/Widget.TapNews.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.TapNews.Button.OutlinedButton</item>
    </style>

    <style name="CustomToolbarDark" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/nav_dark_bg</item>
        <item name="itemIconTint">@color/bottom_nav_dark_colors</item>
        <item name="itemTextColor">@color/bottom_nav_dark_colors</item>
    </style>
</resources>
